<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewMedia"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Section: Navigating the path of Good Governance one decision at a time -->
        <androidx.cardview.widget.CardView
            android:id="@+id/governanceCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/governanceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Navigating the path of Good Governance one decision at a time"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/governanceImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/media_one" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: Our Mandate -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mandateCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/governanceCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/mandateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Mandate"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Current & Past Annual Reports -->
                <TextView
                    android:id="@+id/annualReportsHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Current and Past Annual Reports"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Annual Reports Links -->
                <TextView
                    android:id="@+id/report2023"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2023 Report\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/report2022"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022 Report\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/report2021"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021 Report\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/report2020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020 Report\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/report2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019 Report\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/report2018"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018 Report\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/report2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017 Report\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Promoting Green Environment -->
                <TextView
                    android:id="@+id/greenEnvironmentHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Promoting Green Environment\n"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/greenLink1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Greener Livable City - Water and Sanitation Presentation\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/greenLink2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="National Recycling Forum Presentation: Jacques Lightfoot\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/greenLink3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximising the Value of Waste: Chris Whyte\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/greenLink4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="International Good Practice Presentation: Phakamile Mbonambi\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/greenLink5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Institute of Waste Management of Southern Africa Presentation: Aubrey Muswema\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/greenLink6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Bricks - Unlocking the Future of Building on the African Continent\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/greenLink7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recycling Center Blossoms into a Bright 2024 Highway Mail\n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/developmentStrategyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/mandateCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/developmentStrategyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Development Strategy/n"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/developmentLink1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="eThekwini Long Term Development Plan 2006-2016: Imagine Durban Presentation /n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/developmentLink2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="National Empowerment Fund Presentation: Phakamile Madonsela /n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/developmentLink3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="An Introduction to the IWMSA Presentation: Lindsay Strachan /n"
                    android:textColor="@color/link_color"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/leveragingResourcesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/developmentStrategyCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/leveragingResourcesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leveraging Resources To Build Opportunities In The Green Economy"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/leveragingResourcesImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/media_three" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/faqCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/leveragingResourcesCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/faqTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="FAQ"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/faqQuestion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="How can I become involved in a project?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/faqTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/faqAnswer1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Contact USE-IT and speak with a specialist who can provide you with information. Email info@use-it.co.za or contact our office +27 31 765 2349"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/faqQuestion1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/footerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#333333"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/faqCard"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/footerAboutUsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/footerAboutUsContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="USE-IT is a Non-Profit Organisation with registered PBO status with the express aim of diverting waste and creating jobs."
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/footerAboutUsTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <TextView
                    android:id="@+id/footerSocialLinksTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Social Links"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/footerAboutUsContent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:id="@+id/footerSocialLinksContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/footerSocialLinksTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageButton
                        android:id="@+id/footerFacebookButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_facebook"
                        app:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/footerWhatsappButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_whatsapp"
                        app:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/footerLinkedinButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_linkedin"
                        app:tint="@color/white" />

                </LinearLayout>


                <TextView
                    android:id="@+id/footerCopyright"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Â© Copyright 2024 USE-IT Waste Benefication all rights reserved | Designed by SwiftTech"
                    android:textAlignment="center"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/footerSocialLinksContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
